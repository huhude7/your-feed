page {
  margin-bottom: 150rpx;
}
.address .item {
  height: 210rpx;
  margin: 30rpx 30rpx;
  padding-left: 30rpx;
  border: 1rpx solid rgba(161, 152, 152, 0.651);
  border-radius: 10rpx;
  background-color: #fff;
}
.item .locationAndModify .imageBox{
  width: 50rpx;
  height: 50rpx;
}
.item .locationAndModify .imageBox image {
  width: inherit;
  height: inherit;
}
.item .locationAndModify {
  position: relative;
}
.item .locationAndModify .imageBox {
  position: absolute;
  top: 30rpx;
  right: 20rpx;
}
.address .item .nameAndPhoneNumber,.location {
  word-break:break-all;
  width: 600rpx;
  height: 130rpx;
  font-size: 38rpx;
  font-weight: 400;
  margin-top: 10rpx;
}
.address .item .nameAndPhoneNumber {
  margin-top: 20rpx;
  height: 55rpx;
}
.address .item .location {
  width: 550rpx;
  font-size: 30rpx;
  line-height: 50rpx;
}


.addAddress {
  position: fixed;
  bottom: 0;
  border: 1px solid red;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: #ff6034;
  color: white;
  font-size: 34rpx;
}