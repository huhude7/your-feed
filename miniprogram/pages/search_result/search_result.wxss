/* more */
.more-title {
  font-size: 38rpx;
  font-weight: 1000;
  margin-left: 30rpx;
  margin-top: 70rpx;
}
.more {
  display: flex;
  flex-wrap: wrap;
  margin-top: 45rpx;
  margin-left: 60rpx;
}
.more .itemBox {
  width: 289rpx;
  height: 460rpx;
  margin-left: 3rpx;
  margin-right: 52rpx;
}
.more .itemBox .image {
  box-sizing: border-box;
  width: inherit;
  height: 350rpx;
  border-radius: 38rpx;
  background-color: rgba(187, 184, 184, 0.212);
  padding: 30rpx;
}
.more .itemBox .image image {
  width: 100%;
  height: 100%;
}
.more .itemBox .title {
  text-align: center;
  font-weight: 700;
  font-size: 27rpx;
}
.more .itemBox .title .name {
  margin-top: 12rpx;
}
.more .itemBox .title .price {
  margin-top:9rpx;
  color: gray;
}
.tips {
  margin:30rpx 30rpx;
  font-size: 30rpx;
}