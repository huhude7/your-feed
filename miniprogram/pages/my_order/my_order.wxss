page {
  padding-bottom: 200rpx;
}
.orderItem {
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 90rpx;
  width: 92%;
  border: 1rpx solid rgba(112, 108, 108, 0.705);
  border-radius: 20rpx;
  box-sizing: border-box;
}
.orderItem .time {
  padding: 10rpx 0 10rpx 20rpx;
  border-bottom: 1rpx solid rgba(128, 128, 128, 0.295);
}
.orderItem .orderItemDetail {
  display: flex;
  margin-left: 50rpx;
  margin-top: 30rpx;
  border-bottom: 1rpx solid rgba(27, 26, 26, 0.212);
}
.orderItem .images {
  width: 225rpx;
}
.orderItem .images image {
  width: 180rpx;
  height: 220rpx;
  margin-left: 20rpx;
}
.orderItem .nameAndPirceAndAmount {
  margin-left: 10rpx;
}
.orderItem .nameAndPirceAndAmount .name {
  margin-top: 20rpx;
  font-size: 35rpx;
}
.orderItem .nameAndPirceAndAmount .amount {
  margin-top: 30rpx;
}
.orderItem .nameAndPirceAndAmount .price {
  color: red;
  font-size: 32rpx;
  margin-left:  230rpx;
  margin-top: 20rpx;
}
.orderItem .priceAndState {
  display: flex;
  justify-content: flex-end;
  margin: 20rpx 40rpx 20rpx 0;
}
.orderItem .priceAndState .price {
  margin-right: 40rpx;
}