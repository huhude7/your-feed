swiper {
  height: 700rpx;
  width: 100%;
  box-sizing: border-box;
}
swiper swiper-item .imageBox {
  width: inherit;
  height: inherit;
  padding: 40rpx;
  padding-bottom: 50rpx;
  box-sizing: border-box;
  background-color: #f6f6f6;
}
swiper swiper-item image {
  width: inherit;
  height: inherit;
}
.swiper {
  position: relative;
}
.swiper .tips {
  position: absolute;
  right: 30rpx;
  bottom: 50rpx;
  width: 87rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: gray;
  border-radius: 30rpx;
  color: white;
}
.description {
  box-sizing: border-box;
  background-color: white;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  /* box-shadow: 0 0 15px 0px rgba(77, 75, 75, 0.5); */
  box-shadow: 0 8px 12px #ebedf0;
  transform: translateY(-30rpx);
}
.thumbnailAndRate {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  margin-bottom: 50rpx;
  margin-right: 30rpx;
}
.thumbnail {
  display: flex;
  width: 440rpx;
  height: 95rpx;
}
.thumbnail .imageBox {
  margin-right: 30rpx;
  width: 85rpx;
  height: 85rpx;
  border-radius: 20rpx;
  background-color: #e3e2e2;
}
.thumbnail .imageBox image {
  width: inherit;
  height: inherit;
}
.thumbnailAndRate .rate {
  display: flex;
}
.thumbnailAndRate .rate .van-icon {
  margin-right: 18rpx;
}
.thumbnailAndRate .rate .rateValue {
  width: 50rpx;
  height: 50rpx;
  padding-top: 27rpx;
  font-weight: 1000;
}
.description  {
  padding-left: 40rpx;
  padding-right: 35rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.description .nameAndPrice .name {
  font-size: 50rpx;
  font-weight: 600;
}
.description .nameAndPrice .price {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  color: #cd5e34;
  font-size: 40rpx;
  font-weight: 600;
}
.content{
  color: gray;
  word-break: break-all;
  line-height: 52rpx;
}
.content rich-text {
  margin-top: -15rpx;
}
.popBox {
  width: inherit;
  height: 300rpx;
  border: 1px solid red;
}
/* bottom */
.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 150rpx;
  box-shadow:  -5rpx 11rpx 27rpx 5rpx rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: space-around;
  background-color: white;
}
.bottom .cart,.buy {
  font-size: 30rpx;
  font-weight: 1000;
  line-height: 100rpx; 
  text-align: center;
  box-sizing: border-box;
  border: 1px solid rgba(0, 0, 0, 0.288);
  width: 300rpx;
  height: 100rpx;
  border-radius: 35rpx;
  margin: auto 0;
}
.bottom .buy {
  background-color: #cd5e34;
  color: white;
}
.occupation {
  height: 200rpx;
}
/*模态框*/
.modals{
  position:fixed;
  z-index: 999; 
  top:0; 
  left: 0; 
  right:0; 
  bottom: 0;
}
.modals-cancel{
  position:absolute; 
  z-index:1000; 
  top:0; 
  left: 0; 
  right:0; 
  bottom: 0; 
  background-color: rgba(0,0,0,.5);
}
.bottom-dialog-body{
  position:absolute; 
  z-index:10001; 
  bottom:0; 
  left:0; 
  right:0; 
  padding:30rpx; 
  height:800rpx; 
  border-radius: 30rpx;
  background-color: #fff;
}
/*动画前初始位置*/
.bottom-pos{
  transform:translateY(100%);
}

.bottom-dialog-body image {
  width: 270rpx;
  height: 270rpx;
}